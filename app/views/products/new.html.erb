
<h2>ADD PRODUCT</h2>

<%= form_for(@product) do |f| %>
  

  <div><%= f.label :name %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :price %><br />
   <%= f.text_field :price %></div>

  <div><%= f.label :description %><br />
  <%= f.text_field :description %></div>



  <div><%= f.submit "Add Product", class: "btn btn-inverse" %></div>
<% end %>

